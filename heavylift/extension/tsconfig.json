{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "target": "esnext",
    "module": "none",
    "moduleResolution": "node",

    "lib": ["DOM", "ESNext"],
    "types": ["chrome"],

    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "jsx": "react-jsx",
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
